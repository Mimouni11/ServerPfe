<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Profile Icon -->
    <ImageView
        android:id="@+id/profileIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/man"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <!-- User Name -->
    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textSize="24sp"
        android:layout_below="@id/profileIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Modifier Profile Button -->
    <Button
        android:id="@+id/modifyProfileButton"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Modifier Profile" />

    <!-- Modifier Mot de passe Text -->

    <!-- Logout Text -->

    <TextView
        android:id="@+id/modifyPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/modifyProfileButton"
        android:layout_alignEnd="@id/modifyProfileButton"
        android:layout_alignRight="@id/modifyProfileButton"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="145dp"
        android:layout_marginRight="145dp"
        android:text="Modifier Mot de passe"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/logoutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/modifyPasswordText"
        android:layout_alignEnd="@id/modifyProfileButton"
        android:layout_alignRight="@id/modifyProfileButton"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="251dp"
        android:layout_marginRight="251dp"
        android:text="Logout"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16sp" />

</RelativeLayout>
